{
  "manifest_version": 3,
  "name": "Voice Assistant",
  "version": "1.0",
  "description": "AI-powered voice assistant for your browser",
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture",
  "audioCapture"  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://localhost:5050/*"
  ],
  "options_page": "mic.html"
}