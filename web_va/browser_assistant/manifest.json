{
  "manifest_version": 3,
  "name": "ADHD Study Assistant",
  "version": "1.0.0",
  "description": "Syllabus Planner, Study Mode, and Voice Assistant for ADHD-friendly studying.",

  "action": {
    "default_popup": "popup.html",
    "default_title": "ADHD Study Assistant"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
